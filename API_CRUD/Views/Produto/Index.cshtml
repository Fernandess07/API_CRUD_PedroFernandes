@model IEnumerable<API_CRUD.Models.Produto>

@{
    ViewData["Title"] = "Tabela";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn-outline-primary">Novo Produto</a>
</p>

<div class="col-4 p-0 justify-content-end">
    <form asp-controller= "Produto" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="Pesquisa"
                            placeholder="Pesquisar Nome">
            <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Pesquisar"/>
        </span>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

